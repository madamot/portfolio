{
  "Comment": "A Retry example of the Amazon States Language using an AWS Lambda Function",
  "StartAt": "PageCache",
  "States": {
    "PageCache": {
      "Type": "Task",
      "Resource": "${PageCacheArn}",
      "ResultPath": "$",
      "Parameters": {
        "Payload.$": "$"
      },
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 20,
          "MaxAttempts": 5,
          "BackoffRate": 10
        }
      ],
      "Next": "PageDeploySite"
    },
    "PageDeploySite": {
      "Type": "Task",
      "Resource": "${PageDeploySiteArn}",
      "ResultPath": null,
      "Parameters": {
        "pageCacheOutput.$": "$"
      },
      "Retry": [
        {
          "ErrorEquals": ["States.TaskFailed"],
          "IntervalSeconds": 20,
          "MaxAttempts": 5,
          "BackoffRate": 10
        }
      ],
      "End": true
    }
  }
}
